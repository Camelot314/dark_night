{
    "manifest_version": 2,
    "name": "Dark Night",
    "version": "1.0",
    "description": "Turns the background color of pages to black or grey",
    "icons": {
        "48": "icons/dark_night_icon.png"
    },

    "permissions": [
        "activeTab"
    ],

    "background": {
        "scripts": ["background.js"]
    },

    "browser_action": {
        "default_icon": "icons/dark_night_icon.png",
        "default_title": "Dark Night"
    },

    "content_scripts": [
        {
            "matches": [
                "<all_urls>"
            ],
            "js": [
                "night.js"
            ]
        }
    ]
}